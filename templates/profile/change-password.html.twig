{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">
                Change your password
            </h1>
        </div>
        <div class="my-8 sm:mx-auto sm:w-full sm:max-w-md">
            <turbo-frame id="profile-change-password">
                <div class="bg-white dark:bg-gray-800 py-8 px-4 shadow sm:rounded-lg sm:px-10">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}, 'action': path('app.profile.change.password')}) }}

                    <div class="form-errors">
                        {{ form_errors(form) }}

                    </div>

                    <div>
                        {{ form_label(form.currentPassword) }}
                        <div class="mt-1">
                            {{ form_widget(form.currentPassword) }}
                        </div>
                    </div>

                    <div class="flex gap-4 w-full">
                        <div class="w-full">
                            {{ form_label(form.newPassword.first) }}
                            <div class="mt-1">
                                {{ form_widget(form.newPassword.first) }}
                            </div>
                        </div>
                        <div class="w-full">
                            {{ form_label(form.newPassword.second) }}
                            <div class="mt-1">
                                {{ form_widget(form.newPassword.second) }}
                            </div>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Change password
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </turbo-frame>
        </div>
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <a href="{{ path('app.profile.index') }}"
               class="block text-center py-2 px-4 border border-transparent rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Return
                to our profile</a>
        </div>
    </div>
{% endblock %}
